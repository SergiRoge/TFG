<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:src="@drawable/icon_app"
        android:layout_marginTop="50px"
        android:layout_marginLeft="200px"
        android:layout_width="250px"
        android:layout_height="250px"
        android:id="@+id/imageView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_lostItem_txt"
        android:id="@+id/btn_lost"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_foundItem_txt"
        android:id="@+id/btn_found"
        android:layout_below="@+id/btn_lost"
        android:layout_alignEnd="@+id/btn_lost"
        android:layout_marginTop="43dp"
        android:layout_alignStart="@+id/btn_lost" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:src="@drawable/icon_archive"
        android:id="@+id/btn_archive"
        android:layout_alignParentStart="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:scaleType="fitStart"
        android:src="@drawable/icon_chats"
        android:id="@+id/btn_chats"
        android:layout_below="@+id/btn_archive"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btn_archive" />

    <ImageButton
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_gear"
        android:id="@+id/btn_options"
        android:layout_alignTop="@+id/btn_archive"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/btn_archive" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView"
        android:id="@+id/txt_welcome"
        android:layout_alignEnd="@+id/imageView" />


</RelativeLayout>
